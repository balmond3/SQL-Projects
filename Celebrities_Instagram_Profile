/* What does the app's SQL look like? */
/*instagram account of celebrities*/
CREATE TABLE instagram 
(id INTEGER PRIMARY KEY AUTOINCREMENT,
fullname TEXT,
insta_account TEXT,
followers INTEGER,
country TEXT);
 
